    }

        .service-item:hover {
            background-color: #fa8072;
        }

    .service-icon {
        font-size: 36px; /* Adjusted icon size */
        color: #dc143c;
        background-color: #e9ecef;
        border-radius: 50%;
        width: 50px; /* Adjusted width */
        height: 50px; /* Adjusted height */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
    }

    .service-text {
        font-size: 12px; /* Reduced text size */
        line-height: 1.4;
    }

    .equal-height {
        display: flex;
        flex-wrap: wrap;
    }

        .equal-height .col {
            display: flex;
            flex-direction: column;
        }

    .col-md-6 {
        display: flex;
        flex-direction: column;
    }

        .col-md-6 .service-item {
            flex: 1;
        }

    .service-item:last-child {
        margin-bottom: 0; /* Remove margin for the last item */
    }

    .content-container {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        .content-container:hover {
            background-color: #e9ecef;
            transform: scale(1.02);
        }

    .content-heading {
        color: #000000;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .content-paragraph {
        font-size: 16px;
        line-height: 1.6;
        color: #333;
    }

    .highlight {
        color: #dc143c;
        font-weight: bold;
    }

    .service-card {
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.3s ease;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .service-card {
        height: 100%; /* Ensure all cards have equal height */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .service-card:hover {
            background-color: #fa8072;
            transform: translateY(-5px);
        }

    .service-icon {
        font-size: 40px;
        color: #dc143c;
        margin-bottom: 10px;
    }

    .service-title {
        font-size: 18px;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 10px;
    }

    .service-description {
        font-size: 14px;
        color: #6c757d;
    }
</style>


