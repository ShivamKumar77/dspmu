

@{
    ViewData["Title"] = "Contact";
}



<div id="carouselExampleCaptions" class="carousel slide pt-1" data-bs-ride="carousel">
    <div class="carousel-inner" style="position:sticky;">
        <div class="carousel-item active">
            <img src="~/services/contactt.png"  class="d-block w-100 slide" alt="slider image">
        </div>
    </div>
</div>

<div class="bg-secondary" style=" height:200px; margin-top:-8px;">
    <div class="text-center mx-auto mb-5 wow fadeInUp " data-wow-delay="0.1s" style="max-width: 300px; height:51px;">
        <h1 class="mb-3" style=" margin-top:10px; padding-top:64px;">Contact Us</h1>
    </div>
</div>
<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container-fluid">
        <div class="row g-4">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                        <div class="bg-secondary rounded p-3">
                            <div class="d-flex align-items-center bg-white rounded p-3" style="border: 1px dashed rgba(0, 185, 142, .3)">
                                <div class="icon me-1" style="width: 45px; height: 45px;">
                                    <i class="fas fa-map-marker-alt text-secondary pt-2" style="font-size: 24px;"></i>
                                   
                                </div>
                                <span>DSPMU Ranchi</span>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                        <div class="bg-secondary rounded p-3">
                            <div class="d-flex align-items-center bg-white rounded p-3" style="border: 1px dashed rgba(0, 185, 142, .3)">
                                <div class="icon me-3" style="width: 45px; height: 45px;">
                                    <i class="fa fa-envelope-open text-secondary pt-3"></i>
                                </div>
                                <span>registrar@dspmuranchi.ac.in</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                        <div class="bg-secondary rounded p-3">
                            <div class="d-flex align-items-center bg-white rounded p-3" style="border: 1px dashed rgba(0, 185, 142, .3)">
                                <div class="icon me-3" style="width: 45px; height: 45px;">
                                    <i class="fa fa-phone-alt text-secondary pt-3"></i>
                                </div>
                                <span>+91-7761861674</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3502.7519487010463!2d77.43240407409314!3d28.60721738523231!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390cef9ae97c0c11%3A0xd27e41efecfd60d8!2sGalaxy%20Blue%20Sapphire!5e0!3m2!1sen!2sin!4v1722341169950!5m2!1sen!2sin" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.5s">
                    <p class="mb-4">Thank you for your interest in our services. We're here to assist you with your security needs. Please feel free to reach out to us using the information below:</p>
                    <form asp-action="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                 <div class="form-floating">
                                    <input   type="text" class="form-control" id="name" placeholder="Your Name">
                                    <label  for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input  type="email" class="form-control" id="email" placeholder="Your Email">
                                    <label  for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input  type="text" class="form-control" id="subject" placeholder="Subject">
                                    <label  for="subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea  class="form-control" placeholder="Leave a message here" id="message" style="height: 150px"></textarea>
                                    <label  for="message">Message</label>
                                </div>
                            </div> 
                            <div class="col-12">
                                <button class="btn btn-secondary w-100 py-3" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
