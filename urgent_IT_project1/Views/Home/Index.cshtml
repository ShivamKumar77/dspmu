    // second
    function countUp(elementId, maxCount) {
        let count = 0;
        const element = document.getElementById(elementId);
        const interval = setInterval(() => {
            if (count >= maxCount) {
                clearInterval(interval);
            } else {
                count++;
                element.textContent = count;
            }
        }, 10); // Adjust interval time as needed
    }

