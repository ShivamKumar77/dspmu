            }

    .service-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding: 10px;
        transition: background-color 0.3s ease;
        border-bottom: 1px solid #dee2e6;
    }

        .service-item:hover {
            background-color: #fa8072;
        }

    .service-icon {
        font-size: 36px; /* Adjusted icon size */
        color: #dc143c;
        background-color: #e9ecef;
        border-radius: 50%;
        width: 50px; /* Adjusted width */
        height: 50px; /* Adjusted height */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
    }

    .service-text {
        font-size: 12px; /* Reduced text size */
        line-height: 1.4;
    }

    .equal-height {
        display: flex;
        flex-wrap: wrap;
    }

        .equal-height .col {
            display: flex;
            flex-direction: column;
        }

    .col-md-6 {
        display: flex;
        flex-direction: column;
    }

        .col-md-6 .service-item {
            flex: 1;
        }

    .service-item:last-child {
        margin-bottom: 0; /* Remove margin for the last item */
    }

    .maintenance-benefits {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 30px;
    }

    .benefit-card {
        flex: 1;
        min-width: 250px; /* Minimum width of each card */
        margin: 10px;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .benefit-card:hover {
            background-color: #fa8072;
            transform: scale(1.05);
        }

    .icon-container {
        font-size: 40px; /* Icon size */
        color: #dc143c;
        margin-bottom: 15px; /* Space between icon and text */
    }

    .benefit-card h5 {
        margin-bottom: 10px;
        font-size: 18px; /* Title font size */
    }

    .benefit-card p {
        font-size: 14px; /* Text size */
        line-height: 1.5;
    }
    .service-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 30px;
    }

    .service-box {
        flex: 1;
        min-width: 200px; /* Minimum width of each box */
        margin: 10px;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

        .service-box:hover {
            background-color: #fa8072;
            transform: scale(1.05);
        }

    .service-icon {
        font-size: 40px; /* Icon size */
        color: #dc143c;
        margin-bottom: 15px; /* Space between icon and text */
    }

    .service-box h5 {
        margin-bottom: 10px;
        font-size: 16px; /* Title font size */
    }

    .service-box p {
        font-size: 14px; /* Reduced text size */
        line-height: 1.5;
    }
</style>


