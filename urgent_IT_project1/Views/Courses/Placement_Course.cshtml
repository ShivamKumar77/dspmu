@{
    ViewData["Title"] = "Placement_course";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

@if (TempData["Success"] != null)
{
    <p style="color:green;">@TempData["Success"]</p>
}

<div class="container mt-5  pt-5 pb-3 bg-secondary">
    <div class="row">
        <div class="col-12 col-md-3 order-2 order-lg-1"></div>
        <div class="col-12 col-md-9 order-1 order-lg-2">
            <h2>Add/Edit Course</h2>
            <form asp-action="Placement_Course" method="post" enctype="multipart/form-data" class="form-control">
                <div class="mb-3">
                    <label asp-for="CourseImage" class="form-label">Add Course Image</label>
                    <input asp-for="CourseImage" type="file" class="form-control" id="CourseImage">
                </div>
                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label">Course Name</label>
                    <input asp-for="CourseName" type="text" class="form-control" id="CourseName" placeholder="Enter course name" required>
                </div>
                <div class="mb-3">
                    <label asp-for="CourseDuration" class="form-label">Course Duration</label>
                    <input asp-for="CourseDuration" type="text" class="form-control" id="CourseDuration" placeholder="Enter course duration">
                </div>
                <div class="mb-3">
                    <label asp-for="CourseDescrip1" class="form-label">Course Description 1</label>
                    <textarea asp-for="CourseDescrip1" class="form-control" id="CourseDescrip1" rows="3" placeholder="Enter brief course description"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="CourseDescrip2" class="form-label">Course Description 2</label>
                    <textarea asp-for="CourseDescrip2" class="form-control" id="CourseDescrip2" rows="3" placeholder="Enter detailed course description"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="CoursePrice" class="form-label">Course Price</label>
                    <input asp-for="CoursePrice" type="number" class="form-control" id="CoursePrice" placeholder="Enter course price" step="0.01">
                </div>
                <button type="submit" class="btn btn-primary">Save Course</button>
            </form>
        </div>

    </div>
</div> *@